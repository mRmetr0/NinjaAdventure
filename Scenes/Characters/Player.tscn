func _ready ():
	var hud = get_viewport().get_camera_2d().get_child(0).get_child(0)
	if (hud != null):
		connect(\"ChangeWeapon\", hud._update_weapon_ui)
		connect(\"ChangeHealth\", hud._update_health_ui)
